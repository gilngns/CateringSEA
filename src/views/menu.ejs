<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Meal Plan</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
      rel="stylesheet"
    />
    <link rel="shortcut icon" href="/img/Logo.png" type="image/x-icon" />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <!-- Header -->
    <div class="page-header text-center py-5 bg-dark text-white">
      <h1 class="display-5 fw-bold">Meal Plan</h1>
      <p class="lead">
        <a href="/" class="text-white text-decoration-none">Home</a> /
        <span class="text-warning">Menu Plan</span>
      </p>
    </div>

    <!-- Meal Plan Cards -->
    <section class="py-5 bg-light">
      <div class="container">
        <div class="row" id="meal-card"></div>
      </div>

      <!-- Modal Detail Plan -->
      <div
        class="modal fade"
        id="mealPlanModal"
        tabindex="-1"
        aria-labelledby="mealPlanModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-lg modal-dialog-centered">
          <div class="modal-content rounded-4">
            <div class="modal-header">
              <h5 class="modal-title" id="mealPlanModalLabel">Detail Meal Plan</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Tutup"
              ></button>
            </div>
            <div class="modal-body">
              <h5 id="modalTitle" class="fw-bold"></h5>
              <p id="modalDescription" class="text-muted"></p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <%- include('../views/partials/footer.ejs') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/showMealPlans.js"></script>
  </body>
</html>
